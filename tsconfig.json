{
    "compilerOptions": {
        "target": "ES6",
        "module": "es2022",
		"moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
    },
    "include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
  